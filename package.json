{
  "name": "logux.io",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "start:uikit": "vite --open",
    "test": "eslint . && stylelint src/**/*.sss && pnpm build && size-limit",
    "clean": "rm -Rf dist/",
    "build": "NODE_ENV=production ./scripts/build.js",
    "start": "serve dist/"
  },
  "dependencies": {
    "@babel/core": "^7.16.12",
    "autoprefixer": "^10.4.2",
    "capitalize": "^2.0.4",
    "del": "^6.0.0",
    "dotenv": "^15.0.0",
    "fast-glob": "^3.2.11",
    "jstransformer-lowlight": "^0.1.0",
    "lowlight": "^2.5.0",
    "make-dir": "^3.1.0",
    "nanoevents": "^6.0.2",
    "picocolors": "^1.0.0",
    "postcss": "^8.4.5",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-hexrgba": "^2.0.1",
    "postcss-media-minmax": "^5.0.0",
    "postcss-mixins": "^9.0.1",
    "postcss-momentum-scrolling": "^3.14.22",
    "postcss-nested": "^5.0.6",
    "postcss-url": "^10.1.3",
    "pug": "^3.0.2",
    "recursive-copy": "^2.0.13",
    "rehype-parse": "^8.0.4",
    "rehype-raw": "^6.1.1",
    "rehype-stringify": "^9.0.3",
    "remark": "^14.0.2",
    "remark-highlight.js": "^7.0.1",
    "remark-html": "^15.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "slugify": "^1.6.5",
    "spinnies": "^0.5.1",
    "ssdeploy": "^0.8.0",
    "sugarss": "^4.0.1",
    "typedoc": "^0.22.11",
    "typescript": "~4.5.5",
    "unified": "^10.1.1",
    "unist-util-filter": "^4.0.0",
    "unist-util-flatmap": "^1.0.0",
    "unist-util-visit": "^4.1.0",
    "unzipper": "^0.10.11",
    "vite": "^2.7.13",
    "vite-plugin-pug-transformer": "^1.0.1"
  },
  "devDependencies": {
    "@logux/eslint-config": "^46.1.1",
    "@logux/stylelint-config": "^0.9.0",
    "@size-limit/file": "^7.0.5",
    "eslint": "^8.8.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "nano-staged": "^0.5.0",
    "serve": "^13.0.2",
    "simple-git-hooks": "^2.7.0",
    "size-limit": "^7.0.5",
    "stylelint": "^14.3.0",
    "svgo": "^2.8.0"
  },
  "repository": "logux/logux.io",
  "homepage": "https://logux.io/",
  "license": "MIT",
  "browserslist": [
    "last 2 versions",
    "firefox esr",
    "not dead",
    "not ie 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "postcss": {
    "plugins": {
      "postcss-mixins": {
        "mixinsDir": "mixins"
      },
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "postcss-momentum-scrolling": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "node/no-unpublished-require": "off",
      "no-loop-func": "off"
    },
    "overrides": [
      {
        "files": "src/public/service.js",
        "globals": {
          "FILES": false
        }
      },
      {
        "files": "scripts/**/*.js",
        "rules": {
          "no-console": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "scripts/lib/dirs.js",
    "dist"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config",
    "customSyntax": "sugarss",
    "rules": {
      "function-disallowed-list": null,
      "no-irregular-whitespace": null,
      "color-no-hex": null
    }
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged --config package.json"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "nano-staged": {
    "*.svg": "svgo",
    "*.sss": "stylelint --fix"
  },
  "size-limit": [
    {
      "name": "Files to download",
      "path": [
        "dist/uikit/index.html.gz",
        "dist/assets/*.woff2",
        "dist/assets/*.svg.gz",
        "dist/assets/*.js.gz",
        "dist/assets/*.css.gz",
        "!dist/service.js.gz",
        "!dist/assets/open.*.svg.gz",
        "!dist/assets/close.*.svg.gz",
        "!dist/assets/chat.*.svg.gz",
        "!dist/assets/pinned.*.svg.gz",
        "!dist/assets/favicon.*.svg.gz",
        "!dist/assets/chain-dark.*.svg.gz",
        "!dist/assets/lurkers-dark.*.svg.gz",
        "!dist/assets/logotype-dark.*.svg.gz"
      ],
      "limit": "90 KB"
    },
    {
      "name": "Scripts to execute",
      "path": [
        "dist/assets/*.js",
        "!dist/service.js"
      ],
      "limit": "5 KB"
    }
  ]
}
